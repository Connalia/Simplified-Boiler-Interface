<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gr.aueb.softeng.thermosifonas.Menu">

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/white"
        android:text="   Menu"
        android:textColor="@android:color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTimer"
        android:layout_width="194dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:text="Timer"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/btnTimerIcon"
        app:layout_constraintTop_toBottomOf="@+id/btnAuto" />

    <Button
        android:id="@+id/btnTimerInfo"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/information3"
        app:layout_constraintStart_toEndOf="@+id/btnTimer"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenu" />

    <Button
        android:id="@+id/btnAuto"
        android:layout_width="196dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:textColor="@android:color/white"
        android:text="Automatic Services"
        app:layout_constraintStart_toEndOf="@+id/btnAytoIcon"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenu" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="73dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/back4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTimerIcon"
        android:layout_width="62dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAytoIcon" />

    <Button
        android:id="@+id/btnAytoIcon"
        android:layout_width="62dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/auto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenu" />

</android.support.constraint.ConstraintLayout>
