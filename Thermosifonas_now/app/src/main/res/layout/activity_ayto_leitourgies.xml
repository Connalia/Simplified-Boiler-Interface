<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gr.aueb.softeng.thermosifonas.AytoLeitourgies"
    >

    <TextView
    android:id="@+id/textViewMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="Menu"
    android:textSize="35dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Automatic Services:"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenu"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnTempOn"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:layout_width="138dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Auto On"
        app:layout_constraintStart_toEndOf="@+id/btnTempOnIc"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnTempOff"
        android:layout_width="139dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Auto Off"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/btnTempOffIc"
        app:layout_constraintTop_toBottomOf="@+id/btnTempOn" />

    <Button
        android:id="@+id/btnTemOnIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/information3"
        app:layout_constraintStart_toEndOf="@+id/btnTempOn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnTempOffIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/information3"
        app:layout_constraintStart_toEndOf="@+id/btnTempOff"
        app:layout_constraintTop_toBottomOf="@+id/btnTempOn" />

    <Button
        android:id="@+id/btnEcoMode"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:layout_width="141dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Eco Mode"
        app:layout_constraintStart_toEndOf="@+id/btnEcoModeIc"
        app:layout_constraintTop_toBottomOf="@+id/btnTempOff" />

    <Button
        android:id="@+id/btnEcoIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/information3"
        app:layout_constraintStart_toEndOf="@+id/btnEcoMode"
        app:layout_constraintTop_toBottomOf="@+id/btnTempOff" />

    <Button
        android:id="@+id/btnBackMenu"
        android:layout_width="73dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/back4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTempOnIc"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/onauto"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnTempOffIc"
        android:layout_width="68dp"
        android:layout_height="73dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/offauto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTempOnIc" />

    <Button
        android:id="@+id/btnEcoModeIc"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/eco2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTempOffIc" />

</android.support.constraint.ConstraintLayout>
